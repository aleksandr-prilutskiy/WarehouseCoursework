<Page x:Class="WarehouseCoursework.PageFolder.StaffFolder.ProductListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseCoursework.PageFolder.StaffFolder"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="548" d:DesignWidth="988"
      Title="Список товаров">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Left"
                 Margin="15,0,0,0"
                 Width="400"
                 md:HintAssist.Hint="Поиск"
                 md:TextFieldAssist.LeadingIcon="Search"
                 x:Name="SearchTB"
                 TextChanged="SearchTB_TextChanged" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <Button x:Name="ProductAddBtn"
                HorizontalAlignment="Right"
                Margin="0,0,15,0"
                Content="Добавить"
                Style="{StaticResource SecondBtn}"
                Click="ProductAddBtn_Click" BorderBrush="#FF525252"/>
        <ListBox Grid.Row="1"
                 x:Name="MainLB"
                 SelectionMode="Single"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 HorizontalAlignment="Center">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="InfoMI"
                              Click="InfoMI_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left">
                                <Label Content="Информация"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                                <md:PackIcon Kind="InfoOutline"
                                             VerticalAlignment="Center"
                                             Width="24"
                                             Height="24"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem x:Name="EditMI"
                              Click="EditMI_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left">
                                <Label Content="Редактировать"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                                <md:PackIcon Kind="PencilOutline"
                                             VerticalAlignment="Center"
                                             Width="24"
                                             Height="24"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#773096"
                            CornerRadius="12"
                            Width="300"
                            Height="260"
                            HorizontalAlignment="Center">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="120"/>
                                <RowDefinition Height="60"/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>

                            <Image Source="{Binding PhotoProduct}"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Width="120"
                                   Height="120"
                                   Grid.Column="1"
                                   Grid.Row="1"/>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="2"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       Height="60">
                                <Run Text="{Binding NameProduct}" FontWeight="Bold"/>
                            </TextBlock>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="3"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Foreground="White">
                                <Run Text="Остаток: " FontWeight="Bold"/>
                                <Run Text="{Binding RemainProduct}"/>
                            </TextBlock>

                            <TextBlock Grid.Column="1"
                                       Grid.Row="4"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       Foreground="White">
                                <Run Text="Место: " FontWeight="Bold"/>
                                <Run Text="{Binding LocationProduct}"/>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
