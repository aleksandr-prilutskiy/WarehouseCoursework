<Page x:Class="WarehouseCoursework.PageFolder.StaffFolder.ProductAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseCoursework.PageFolder.StaffFolder"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="548" d:DesignWidth="988"
      Title="Добавление товара">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border x:Name="PhotoBorder"
                Grid.Column="3"
                Grid.Row="1"
                Grid.RowSpan="3"
                Margin="18"
                CornerRadius="6"
                BorderBrush="Black"
                BorderThickness="2"
                Width="200"
                Cursor="Hand"
                MouseLeftButtonDown="PhotoBorder_MouseLeftButtonDown">
            <Border.Background>
                <ImageBrush x:Name="PhotoProductImageBrush"/>
            </Border.Background>
        </Border>
        <Label
               Grid.Column="3"
               Grid.Row="4"
               VerticalAlignment="Top">
            <Label.Content>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="Чтобы добавить фото, кликните"/>
                    <Run Text="на него"/>
                </TextBlock>
            </Label.Content>
        </Label>
        <TextBox x:Name="NameTB"
                 Grid.Column="1"
                 Grid.Row="1"
                 md:HintAssist.Hint="Название"
                 md:TextFieldAssist.LeadingIcon="Sitemap"
                 Text="{Binding NameProduct}" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <ComboBox x:Name="ManufacturerCB"
                 Grid.Column="1"
                 Grid.Row="2"
                 md:HintAssist.Hint="Производитель"
                 md:TextFieldAssist.LeadingIcon="Factory"
                 SelectedItem="{Binding Manufacturer, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"
                 IsSynchronizedWithCurrentItem="True"
                  SelectedValue="{Binding IdManufacturer, Mode=OneWayToSource}"
                  SelectedValuePath="IdManufacturer"
                  DisplayMemberPath="NameManufacturer" BorderBrush="#FF525252" Foreground="Black"/>
        <DatePicker x:Name="DateOfReleaseDP"
                 Grid.Column="1"
                 Grid.Row="3"
                 md:HintAssist.Hint="Дата производства" BorderBrush="#FF525252" Foreground="Black"/>
        <TextBox x:Name="PriceTB"
                 Grid.Column="2"
                 Grid.Row="1"
                 md:HintAssist.Hint="Цена"
                 md:TextFieldAssist.LeadingIcon="Money"
                 Text="{Binding PriceProduct}" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <TextBox x:Name="LocationTB"
                 Grid.Column="2"
                 Grid.Row="3"
                 md:HintAssist.Hint="Локация"
                 md:TextFieldAssist.LeadingIcon="Warehouse"
                 Text="{Binding LocationProduct}" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <TextBox x:Name="RemainTB"
                 Grid.Column="2"
                 Grid.Row="2"
                 md:HintAssist.Hint="Остаток"
                 md:TextFieldAssist.LeadingIcon="BoxOutline"
                 Text="{Binding RemainProduct}" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <Button x:Name="AddProductBtn"
                Grid.Column="2"
                Grid.Row="4"
                Content="Добавить"
                Click="AddProductBtn_Click" Background="#FF525252"/>
        <Button x:Name="BackBtn"
                Grid.Column="1"
                Grid.Row="4"
                Width="120"
                Content="Назад"
                Background="#DCDEE5"
                Click="BackBtn_Click"/>
    </Grid>
</Page>
