<Page x:Class="WarehouseCoursework.PageFolder.AdminFolder.ManufacturerAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseCoursework.PageFolder.AdminFolder"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="548"
      d:DesignWidth="988"
      Title="Добавление производителя">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="450"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="NameTB"
                 Grid.Column="1"
                 Grid.Row="1"
                 md:HintAssist.Hint="Название"
                 md:TextFieldAssist.LeadingIcon="Factory"
                 BorderBrush="#FF525252"
                 CaretBrush="#FF525252"
                 Foreground="Black"
                 SelectionBrush="#FF525252"/>
        <Button x:Name="AddBtn"
                Grid.Column="1"
                Grid.Row="2"
                Content="Добавить"
                Click="AddBtn_Click"
                Background="#FF525252"/>
        <Button x:Name="BackBtn"
                Grid.Column="1"
                Grid.Row="3"
                Content="Назад"
                Width="120"
                Background="#DCDEE5"
                Click="BackBtn_Click"/>
    </Grid>
</Page>
