<Window x:Class="WarehouseCoursework.WindowFolder.AdminFolder.MainAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseCoursework.WindowFolder.AdminFolder"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Height="700"
        Width="1070"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="{x:Null}"
        AllowsTransparency="True"
        Title="Главное окно администратора"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Icon="/ResourceFolder/ImageFolder/logo.png">
    <Border Style="{StaticResource DefaultBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        HorizontalAlignment="Left"
                        Margin="12,0,0,0">
                <md:PackIcon Kind="Storefront"
                             Width="64"
                             Height="64"
                             Foreground="DarkCyan"/>
                <Separator Opacity="0"
                           Width="12"/>
                <Label Content="DiplomWarehouse"
                       FontSize="36"
                       FontWeight="Black"
                       Foreground="DarkCyan"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        Margin="0,0,80,0"
                        HorizontalAlignment="Right">
                <Label x:Name="UsernameLabel"
                       FontSize="24"
                       FontWeight="Medium"/>
                <md:PackIcon Kind="Logout"
                             Width="26"
                             Height="26"
                             VerticalAlignment="Center"
                             Cursor="Hand"
                             MouseLeftButtonDown="PackIcon_MouseLeftButtonDown"/>
            </StackPanel>
            <md:PackIcon Kind="Close"
                         Grid.Row="0"
                         Width="48"
                         Height="48"
                         HorizontalAlignment="Right"
                         Margin="6"
                         Cursor="Hand"
                         MouseLeftButtonDown="PackIcon_MouseLeftButtonDown_1"/>
            <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        HorizontalAlignment="Left"
                        Margin="12,0,0,0">
                <Button x:Name="UserBtn"
                        Background="DarkCyan"
                        Width="200"
                        Click="UserBtn_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="UserOutline"
                                     Width="24"
                                     Height="24"
                                     Foreground="White"
                                     VerticalAlignment="Center"/>
                            <Label Content="Пользователи"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Separator Opacity="0"
                           Width="12"/>
                <Button x:Name="StaffBtn"
                        Background="DarkCyan"
                        Width="200"
                        Click="StaffBtn_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="People"
                                         Width="24"
                                         Height="24"
                                         Foreground="White"
                                         VerticalAlignment="Center"/>
                            <Label Content="Сотрудники"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Separator Opacity="0"
                           Width="12"/>
                <Button x:Name="GoodsInStockBtn"
                        Background="DarkCyan"
                        Width="200"
                        Click="GoodsInStockBtn_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="ShoppingCart"
                                         Width="24"
                                         Height="24"
                                         Foreground="White"
                                         VerticalAlignment="Center"/>
                            <Label Content="Товары на складе"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Separator Opacity="0"
                           Width="12"/>
                <Button x:Name="ProductsBtn"
                        Background="DarkCyan"
                        Width="200"
                        Click="ProductsBtn_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="ShoppingBasket"
                                         Width="24"
                                         Height="24"
                                         Foreground="White"
                                         VerticalAlignment="Center"/>
                            <Label Content="Товары"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <Separator Opacity="0"
                           Width="12"/>
                <Button x:Name="ManufacturerBtn"
                        Background="DarkCyan"
                        Width="200"
                        Click="ManufacturerBtn_Click">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Factory"
                                         Width="24"
                                         Height="24"
                                         Foreground="White"
                                         VerticalAlignment="Center"/>
                            <Label Content="Производители"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
            <Frame x:Name="MainFrame"
                   Grid.Row="2"
                   Margin="6"
                   NavigationUIVisibility="Hidden"/>
        </Grid>
    </Border>
</Window>
