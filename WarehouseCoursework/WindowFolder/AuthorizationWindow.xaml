<Window x:Class="WarehouseCoursework.WindowFolder.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseCoursework.WindowFolder"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Авторизация" 
        Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="{x:Null}"
        AllowsTransparency="True" 
        Icon="/ResourceFolder/ImageFolder/logo.png">
    <Border Style="{StaticResource DefaultBorder}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="76"/>
                <RowDefinition Height="76"/>
                <RowDefinition Height="76"/>
                <RowDefinition Height="76"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.RowSpan="6">
                <md:PackIcon Kind="Warehouse"
                             Width="128"
                             Height="128"
                             HorizontalAlignment="Center"
                             Foreground="DarkCyan"/>
                <Separator Opacity="0"
                           Height="6"/>
                <Label Content="Diplom"
                       FontWeight="Black"
                       FontSize="42"/>
                <Label Content="Warehouse"
                       FontWeight="Black"
                       FontSize="42"/>
            </StackPanel>
            <Label Content="Авторизация"
                   Grid.Column="1"
                   Grid.Row="0"
                   FontWeight="Bold"
                   FontSize="28"/>
            <TextBox x:Name="LoginTB"
                     Grid.Column="1"
                     Grid.Row="1"
                     md:HintAssist.Hint="Логин"
                     md:TextFieldAssist.LeadingIcon="UserOutline"
                     BorderBrush="DarkCyan"
                     CaretBrush="DarkCyan"
                     Foreground="Black"
                     SelectionBrush="#FF525252"/>
            <PasswordBox x:Name="PasswordPB"
                         Grid.Column="1"
                         Grid.Row="2"
                         md:HintAssist.Hint="Пароль"
                         md:TextFieldAssist.LeadingIcon="PasswordOutline"
                         BorderBrush="DarkCyan"
                         CaretBrush="DarkCyan"
                         Foreground="Black"
                         SelectionBrush="#FF525252"/>
            <Button x:Name="AuthorizeBtn"
                    Grid.Column="1"
                    Grid.Row="3"
                    Content="ВОЙТИ"
                    Click="AuthorizeBtn_Click"
                    BorderBrush="DarkCyan"
                    Background="DarkCyan"/>
            <md:PackIcon Kind="Close"
                         Grid.Column="1"
                         HorizontalAlignment="Right"
                         Margin="6"
                         Width="28"
                         Height="28"
                         Cursor="Hand"
                         MouseLeftButtonDown="PackIcon_MouseLeftButtonDown"/>
        </Grid>
    </Border>
</Window>