<Page x:Class="WarehouseCoursework.PageFolder.AdminFolder.StaffListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseCoursework.PageFolder.AdminFolder"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="548" d:DesignWidth="988"
      Title="Список сотрудников">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Left"
                 Margin="15,0,0,0"
                 Width="400"
                 md:HintAssist.Hint="Поиск"
                 md:TextFieldAssist.LeadingIcon="Search"
                 x:Name="SearchTB"
                 TextChanged="SearchTB_TextChanged" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <Button x:Name="StaffAddBtn"
                HorizontalAlignment="Right"
                Margin="0,0,15,0"
                Content="Добавить"
                Style="{StaticResource SecondBtn}"
                Click="StaffAddBtn_Click" BorderBrush="#FF525252"/>
        <ListBox Grid.Row="1"
                 x:Name="MainLB"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 HorizontalAlignment="Center"
                 SelectionMode="Single">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="InfoMI"
                              Click="InfoMI_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left">
                                <md:PackIcon Kind="InfoOutline"
                                             VerticalAlignment="Center"
                                             Width="24"
                                             Height="24"/>
                                <Label Content="Информация"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem x:Name="EditMI"
                              Click="EditMI_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left">
                                <md:PackIcon Kind="PencilOutline"
                                             VerticalAlignment="Center"
                                             Width="24"
                                             Height="24"/>
                                <Label Content="Редактировать"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem x:Name="DismissMI"
                              Click="DismissMI_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left">
                                <md:PackIcon Kind="PersonOff"
                                             VerticalAlignment="Center"
                                             Width="24"
                                             Height="24"/>
                                <Label Content="Уволить"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem x:Name="DeleteMI"
                              Click="DeleteMI_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left">
                                <md:PackIcon Kind="TrashOutline"
                                             VerticalAlignment="Center"
                                             Width="24"
                                             Height="24"/>
                                <Label Content="Удалить"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="DarkCyan"
                            CornerRadius="12"
                            Width="960"
                            Height="100">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="1"
                                       Grid.Row="1"
                                       FontSize="18"
                                       Foreground="White">
                                <Run Text="Фамилия: "
                                     FontWeight="Bold"/>
                                <Run Text="{Binding SurnameStaff}"/>
                            </TextBlock>
                            <TextBlock Grid.Column="1"
                                       Grid.Row="2"
                                       FontSize="18"
                                       Foreground="White">
                                <Run Text="Имя: "
                                     FontWeight="Bold"/>
                                <Run Text="{Binding NameStaff}"/>
                            </TextBlock>
                            <TextBlock Grid.Column="1"
                                       Grid.Row="3"
                                       FontSize="18"
                                       Foreground="White">
                                <Run Text="Отчество: "
                                     FontWeight="Bold"/>
                                <Run Text="{Binding MiddleNameStaff}"/>
                            </TextBlock>
                            <TextBlock Grid.Column="2"
                                       Grid.Row="1"
                                       FontSize="18"
                                       Foreground="White">
                                <Run Text="Телефон: "
                                     FontWeight="Bold"/>
                                <Run Text="{Binding PhoneStaff}"/>
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Dismissed}" Value="1">
                                                <Setter Property="Text"
                                                        Value="Сотрудник уволен                                                                                                 "/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Grid.Column="2"
                                       Grid.Row="2"
                                       FontSize="18"
                                       Foreground="White">
                                <Run Text="Почта: "
                                     FontWeight="Bold"/>
                                <Run Text="{Binding MailStaff}"/>
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Dismissed}" Value="1">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Grid.Column="2"
                                       Grid.Row="3"
                                       FontSize="18"
                                       Foreground="White">
                                <Run Text="Логин: "
                                     FontWeight="Bold"/>
                                <Run Text="{Binding User.LoginUser}"/>
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Dismissed}" Value="1">
                                                <Setter Property="Visibility"
                                                        Value="Hidden"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
