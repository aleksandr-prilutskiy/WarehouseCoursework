<Page x:Class="WarehouseCoursework.PageFolder.AdminFolder.StaffInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseCoursework.PageFolder.AdminFolder"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="548" d:DesignWidth="988"
      Title="Информация о сотрдунике">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="SurnameTB"
                 Grid.Column="1"
                 Grid.Row="1"
                 md:HintAssist.Hint="Фамилия"
                 md:TextFieldAssist.LeadingIcon="User"
                 Text="{Binding SurnameStaff}"
                 IsEnabled="False" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <TextBox x:Name="NameTB"
                 Grid.Column="1"
                 Grid.Row="2"
                 md:HintAssist.Hint="Имя"
                 md:TextFieldAssist.LeadingIcon="User"
                 Text="{Binding NameStaff}"
                 IsEnabled="False" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <TextBox x:Name="MiddeNameTB"
                 Grid.Column="1"
                 Grid.Row="3"
                 md:HintAssist.Hint="Отчесто"
                 md:TextFieldAssist.LeadingIcon="User"
                 Text="{Binding MiddleNameStaff}"
                 IsEnabled="False" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <DatePicker x:Name="DateOfBirthDP"
                 Grid.Column="1"
                 Grid.Row="4"
                 md:HintAssist.Hint="Дата рождения"
                 Text="{Binding DateOfBirthStaff}"
                 IsEnabled="False" BorderBrush="#FF525252" Foreground="Black"/>
        <TextBox x:Name="PhoneTB"
                 Grid.Column="1"
                 Grid.Row="5"
                 md:HintAssist.Hint="Номер телефона"
                 md:TextFieldAssist.LeadingIcon="PhoneOutline"
                 Text="{Binding PhoneStaff}"
                 IsEnabled="False" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <TextBox x:Name="MailTB"
                 Grid.Column="2"
                 Grid.Row="1"
                 md:HintAssist.Hint="Почта"
                 md:TextFieldAssist.LeadingIcon="EmailOutline"
                 Text="{Binding MailStaff}"
                 IsEnabled="False" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <TextBox x:Name="SeriesPassportTB"
                 Grid.Column="2"
                 Grid.Row="2"
                 md:HintAssist.Hint="Серия паспорта"
                 md:TextFieldAssist.LeadingIcon="Passport"
                 Text="{Binding SeriesPassportStaff}"
                 IsEnabled="False" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <TextBox x:Name="NumberPassportTB"
                 Grid.Column="2"
                 Grid.Row="3"
                 md:HintAssist.Hint="Номер паспорта"
                 md:TextFieldAssist.LeadingIcon="Passport"
                 Text="{Binding NumberPassportStaff}"
                 IsEnabled="False" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <TextBox x:Name="LoginTB"
                 Grid.Column="2"
                 Grid.Row="4"
                 md:HintAssist.Hint="Логин"
                 md:TextFieldAssist.LeadingIcon="User"
                 Text="{Binding User.LoginUser}"
                 IsEnabled="False" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <Button x:Name="BackfBtn"
                Grid.Column="2"
                Grid.Row="5"
                Content="Назад"
                Click="BackfBtn_Click" Background="#FF525252"/>
    </Grid>
</Page>
