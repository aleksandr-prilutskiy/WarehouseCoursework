<Page x:Class="WarehouseCoursework.PageFolder.AdminFolder.UserAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseCoursework.PageFolder.AdminFolder"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="548" d:DesignWidth="988"
      Title="Добавление пользователя">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="LoginTB"
                 Grid.Row="1"
                 md:HintAssist.Hint="Логин"
                 md:TextFieldAssist.LeadingIcon="User" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <PasswordBox x:Name="PasswordPB"
                 Grid.Row="2"
                 md:HintAssist.Hint="Пароль"
                 md:TextFieldAssist.LeadingIcon="Password" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <PasswordBox x:Name="PasswordRepeatPB"
                 Grid.Row="3"
                 md:HintAssist.Hint="Пароль повторно"
                 md:TextFieldAssist.LeadingIcon="Password" BorderBrush="#FF525252" CaretBrush="#FF525252" Foreground="Black" SelectionBrush="#FF525252"/>
        <Button x:Name="UserAddBtn"
                Grid.Row="4"
                Content="Добавить"
                Click="UserAddBtn_Click" Background="#FF525252"/>
        <Button x:Name="BackBtn"
                Grid.Row="4"
                HorizontalAlignment="Left"
                Margin="164,0,0,0"
                Width="120"
                Style="{StaticResource SecondBtn}"
                Content="Назад"
                Click="BackBtn_Click" BorderBrush="#FF525252"/>
    </Grid>
</Page>
