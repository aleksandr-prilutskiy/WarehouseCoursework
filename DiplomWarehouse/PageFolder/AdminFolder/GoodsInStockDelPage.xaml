<Page x:Class="WarehouseCoursework.PageFolder.AdminFolder.GoodsInStockDelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseCoursework.PageFolder.AdminFolder"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="548"
      d:DesignWidth="988"
      Title="Редактирование пользователей">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="{Binding NameProduct}"
               FontSize="30"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Grid.Row="0"/>
        <Label Content="Количество на складе:"
               FontSize="30"
               Grid.Column="0"
               Grid.Row="1"
               HorizontalAlignment="Right"/>
        <Label Content="{Binding RemainProduct}"
               FontSize="30"
               Grid.Column="1"
               Grid.Row="1"
               HorizontalAlignment="Left"/>
        <TextBox x:Name="DelCount"
                 Text=""
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Grid.Row="2"
                 md:HintAssist.Hint="Сколько забрать:"
                 md:TextFieldAssist.LeadingIcon="User"
                 BorderBrush="#FF525252"
                 CaretBrush="#FF525252"
                 Foreground="Black"
                 SelectionBrush="#FF525252"
                 Cursor=""/>
        <Button x:Name="DelBtn"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="3"
                Content="Забрать"
                Click="AddBtn_Click"
                Background="#FF525252"/>
        <Button x:Name="BackBtn"
                Grid.Row="3"
                HorizontalAlignment="Left"
                Margin="186,0,0,0"
                Width="120"
                Style="{StaticResource SecondBtn}"
                Content="Назад"
                Click="BackBtn_Click"
                BorderBrush="#FF525252"/>
    </Grid>
</Page>
