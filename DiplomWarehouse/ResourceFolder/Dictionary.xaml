<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="DefaultBorder" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="12"/>
    </Style>

    <Style TargetType="{x:Type DatePicker}"
           BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="58"/>
        <Setter Property="FontFamily" Value="SF Pro Dispaly"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="Purple"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="Purple"/>
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style TargetType="{x:Type TextBox}"
           BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="58"/>
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="Purple"/>
        <Setter Property="BorderBrush" Value="Purple"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="md:HintAssist.Background" Value="Transparent"/>
        <Setter Property="md:HintAssist.FontFamily" Value="SF Pro Displa"/>
        <Setter Property="md:HintAssist.Foreground" Value="Purple"/>
        <Setter Property="md:TextFieldAssist.LeadingIconSize" Value="22"/>
        <Setter Property="md:TextFieldAssist.HasLeadingIcon" Value="True"/>
        <Setter Property="md:TextFieldAssist.TextFieldCornerRadius" Value="6"/>
    </Style>

    <Style TargetType="{x:Type PasswordBox}"
           BasedOn="{StaticResource MaterialDesignOutlinedRevealPasswordBox}">
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="58"/>
        <Setter Property="FontFamily" Value="SF Pro Displa"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="Purple"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="Purple"/>
        <Setter Property="md:HintAssist.Background" Value="Transparent"/>
        <Setter Property="md:HintAssist.FontFamily" Value="SF Pro Displa"/>
        <Setter Property="md:HintAssist.Foreground" Value="Purple"/>
        <Setter Property="md:TextFieldAssist.LeadingIconSize" Value="20"/>
        <Setter Property="md:TextFieldAssist.HasLeadingIcon" Value="True"/>
        <Setter Property="md:TextFieldAssist.TextFieldCornerRadius" Value="6"/>
    </Style>

    <Style TargetType="{x:Type Button}"
           BasedOn="{StaticResource MaterialDesignFlatDarkButton}">
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="#CB4FFF"/>
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="58"/>
        <Setter Property="md:ButtonAssist.CornerRadius" Value="6"/>
    </Style>

    <Style x:Key="SecondBtn" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedDarkButton}">
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="Purple"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="58"/>
        <Setter Property="md:ButtonAssist.CornerRadius" Value="6"/>
    </Style>

    <Style TargetType="{x:Type ComboBox}"
           BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="Purple"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="Purple"/>
        <Setter Property="Width" Value="320"/>
        <Setter Property="Height" Value="58"/>
        <Setter Property="md:TextFieldAssist.HasLeadingIcon" Value="True"/>
        <Setter Property="md:TextFieldAssist.TextFieldCornerRadius" Value="6"/>
        <Setter Property="md:TextFieldAssist.LeadingIconSize" Value="22"/>
        <Setter Property="md:HintAssist.Background" Value="Transparent"/>
        <Setter Property="md:HintAssist.Foreground" Value="Purple"/>
    </Style>
</ResourceDictionary>